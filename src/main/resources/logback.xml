<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%t] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="slick.compiler.CodeGen" level="INFO" />
    <logger name="io.getquill.context.jdbc.JdbcContextVerbExecute" level="INFO" />
    <logger name="org.apache.kafka.clients.consumer" level="INFO" />
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
